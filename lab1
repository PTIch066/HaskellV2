import Data.List ()
import System.IO

--Завдання 2.11 Функцiя визначає, чи мiстить круг початок координат. 
--Круг задається координатами центра та радiусом

--Вирішення: для цього нам потрібно визначити чи відстань
--від початку координат до центру круга є меншою за радіус.
f1 :: (Double, Double, Double) -> Bool
f1 (x, y, r)
 | (sqrt(x*x + y*y) <= r) = True 
 | otherwise = False

f2 :: Double -> Double -> Double -> Bool
f2 x y r
 | (sqrt(x*x + y*y) <= r) = True 
 | otherwise = False

